---
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await Astro.glob('../posts/*.md')


  return [
    { params: { tag: 'CCS'}, props: {posts: posts}},
    { params: { tag: 'ccs'}, props: {posts: posts}},
    { params: { tag: 'astro'}, props: {posts: posts}},
    { params: { tag: 'successes'}, props: {posts: posts}},
    { params: { tag: 'community'}, props: {posts: posts}},
    { params: { tag: 'blogging'}, props: {posts: posts}},
    { params: { tag: 'setbacks'}, props: {posts: posts}},
    { params: { tag: 'learning in public'}, props: {posts: posts}},
  ]
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const filteredPosts = posts.filter((post) => post.frontmatter.tags?.includes(tag))
---

<BaseLayout pageTitle={tag}>
  <ul>
    {filteredPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
  </ul>
</BaseLayout>